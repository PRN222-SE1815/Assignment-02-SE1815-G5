@page
@model Presentation.Pages.Account.AccessDeniedModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Access Denied - TPF University</title>
    <link rel="stylesheet" href="~/css/Account/AccessDenied.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
</head>
<body>
    <div class="access-denied-wrapper">
        <div class="access-denied-card">
            <div class="access-denied-header">
                <div class="logo-icon">
                    <i class="fas fa-graduation-cap"></i>
                </div>
                <h1 class="university-name">TPF University</h1>
                <p class="system-name">Student Management System</p>
            </div>

            <div class="access-denied-content">
                <div class="error-icon">
                    <i class="fas fa-lock"></i>
                </div>
                <h2 class="error-title">Access Denied</h2>
                <p class="error-message">
                    You don't have permission to access this page. Please contact your administrator if you believe this is an error.
                </p>
                
                <div class="action-buttons">
                    <a asp-page="/Account/Login" class="btn-primary">
                        <span class="btn-icon">
                            <i class="fas fa-sign-in-alt"></i>
                        </span>
                        <span>Back to Login</span>
                    </a>
                </div>
            </div>

            <div class="access-denied-footer">
                <p>&copy; @DateTime.Now.Year TPF University</p>
            </div>
        </div>
    </div>
</body>
</html>
