@page
@model Presentation.Pages.Account.LoginModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login - TPF University</title>
    <link rel="stylesheet" href="~/css/Account/Login.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
</head>
<body>
    <div class="login-wrapper">
        <div class="login-card">
            <div class="login-header">
                <div class="logo-icon">
                    <i class="fas fa-graduation-cap"></i>
                </div>
                <h1 class="university-name">TPF University</h1>
                <p class="system-name">Student Management System</p>
            </div>

            <form method="post" class="login-form">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="validation-summary"></div>

                <div class="form-group">
                    <label class="form-label" asp-for="Input.Username">Username</label>
                    <div class="input-group">
                        <span class="input-icon">
                            <i class="fas fa-user"></i>
                        </span>
                        <input class="form-input-login" asp-for="Input.Username" placeholder="Enter your username" autocomplete="username" />
                    </div>
                    <span asp-validation-for="Input.Username" class="validation-message"></span>
                </div>

                <div class="form-group">
                    <label class="form-label" asp-for="Input.Password">Password</label>
                    <div class="input-group">
                        <span class="input-icon">
                            <i class="fas fa-lock"></i>
                        </span>
                        <input class="form-input-login" asp-for="Input.Password" type="password" placeholder="Enter your password" autocomplete="current-password" />
                    </div>
                    <span asp-validation-for="Input.Password" class="validation-message"></span>
                </div>

                <button type="submit" class="btn-login">
                    <span>Sign In</span>
                    <span class="btn-icon">
                        <i class="fas fa-arrow-right"></i>
                    </span>
                </button>
            </form>

            <div class="login-footer">
                <p>&copy; @DateTime.Now.Year TPF University</p>
            </div>
        </div>
    </div>
</body>
</html>

