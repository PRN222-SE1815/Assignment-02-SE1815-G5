@page
@model Presentation.Areas.Student.Pages.StudentGrade.IndexModel
@{
    ViewData["Title"] = "My Grades";
}

<section class="student-grade-page">
    <div class="grade-container">
        <div class="page-header">
            <div class="header-content">
                <h1 class="page-title"><i class="fas fa-graduation-cap"></i> My Grades</h1>
                <p class="page-subtitle">View your grades for enrolled courses.</p>
            </div>
        </div>

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert alert-error">
                <i class="fas fa-exclamation-circle"></i> @Model.ErrorMessage
            </div>
        }

        @if (Model.GradeViewModels.Count == 0)
        {
            <div class="empty-state">
                <i class="fas fa-folder-open"></i>
                <p>No enrolled courses found.</p>
            </div>
        }
        else
        {
            @foreach (var vm in Model.GradeViewModels)
            {
                <div class="course-card">
                    <div class="course-header">
                        <div class="course-info">
                            <span class="course-code">@vm.CourseCode</span>
                            <span class="course-name">@vm.CourseName</span>
                            <span class="section-code">@vm.SectionCode</span>
                        </div>
                        <div class="course-badges">
                            @if (vm.HasGrades && vm.GradebookStatus is not null)
                            {
                                <span class="status-badge status-@vm.GradebookStatus.ToLower().Replace("_", "-")">@vm.GradebookStatus</span>
                            }
                            else
                            {
                                <span class="status-badge status-pending">Not Published</span>
                            }
                        </div>
                    </div>

                    @if (vm.HasGrades && vm.GradeItems.Count > 0)
                    {
                        <div class="grade-table-wrapper">
                            <table class="grade-table">
                                <thead>
                                    <tr>
                                        @foreach (var item in vm.GradeItems)
                                        {
                                            var isQuizSync = item.ItemName.StartsWith("QUIZ:", StringComparison.OrdinalIgnoreCase);
                                            <th>
                                                <span class="item-name">@item.ItemName</span>
                                                @if (isQuizSync)
                                                {
                                                    <span class="sync-icon" title="Auto-synced from quiz"><i class="fas fa-rotate"></i></span>
                                                }
                                                @if (item.Weight.HasValue)
                                                {
                                                    <span class="item-meta">@(item.Weight.Value * 100)%</span>
                                                }
                                            </th>
                                        }
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        @foreach (var item in vm.GradeItems)
                                        {
                                            var entry = vm.GradeEntries.FirstOrDefault(e => e.GradeItemId == item.GradeItemId);
                                            <td class="score-cell">
                                                @if (entry?.Score is not null)
                                                {
                                                    <span class="score-value">@entry.Score.Value.ToString("0.##")</span>
                                                    <span class="score-max">/ @item.MaxScore</span>
                                                }
                                                else
                                                {
                                                    <span class="score-empty">â€”</span>
                                                }
                                            </td>
                                        }
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="no-grades">
                            <i class="fas fa-clock"></i> Grades not yet available.
                        </div>
                    }
                </div>
            }
        }
    </div>
</section>

@section Styles {
    <link rel="stylesheet" href="~/css/Student/StudentGrade/Index.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
}
